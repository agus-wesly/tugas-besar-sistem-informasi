generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Meja {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt


    user User[]
}

model User {
    id        Int      @id @default(autoincrement())
    nama       String  @db.VarChar(32)
    createdAt DateTime @default(now())

    id_meja     Int
    meja        Meja    @relation(fields: [id_meja], references: [id])

    pemesanan   Pemesanan? 

    @@index([id_meja])

}

enum TipeMenu {
    MAKANAN
    MINUMAN
}

model Menu {
    id              Int      @id @default(autoincrement())
    nama            String
    url_gambar      String
    deskripsi       String
    harga           Int

    tipe            TipeMenu

    detail_pesanan DetailPesanan[]
}

enum Status {
    PENDING
    PROCESSING
    COMPLETED
    REJECTED
}

model Pemesanan {
    id        Int      @id @default(autoincrement())
    status  Status
    waktu_pesan     DateTime @default(now())
    updatedAt DateTime @updatedAt
    total_harga Int

    user_id     Int     @unique
    user        User    @relation(fields: [user_id], references: [id])


    detail_pesanan DetailPesanan[]

    @@index([user_id])
}

model DetailPesanan {
    id Int      @id @default(autoincrement())
    jumlah      Int

    id_menu Int 
    menu    Menu     @relation(fields: [id_menu], references: [id])

    id_pemesanan Int 
    pemesanan   Pemesanan @relation(fields: [id_pemesanan], references: [id])

    @@index([id_menu])
    @@index([id_pemesanan])
}

model Admin {
    id Int      @id @default(autoincrement())
    username    String  @unique @db.VarChar(12)
    password    String  @db.VarChar(8)

    name        String
    createdAt   DateTime @default(now())
    updatedAt DateTime @updatedAt

}